version: '2.3'

services:

  conductor-server:
    environment:
      - CONFIG_PROP=config-mysql.properties
    image: conductor:server
    build:
      context: ../../
      dockerfile: docker/server/Dockerfile
    networks:
      - internal
    links:
      - elasticsearch:es
    ports:
      - 8080:8080
      - 8090:8090
    depends_on:
      elasticsearch:
        condition: service_healthy
      mysql:
        condition: service_healthy
    volumes:
      - ../server/config:/app/config
      - ./logs:/app/logs

  conductor-ui:
    environment:
      - WF_SERVER=http://conductor-server:8080/api/
    image: conductor:ui
    build:
      context: ../../
      dockerfile: docker/ui/Dockerfile
    networks:
      - internal
    ports:
      - 5000:5000
    depends_on:
      - conductor-server

  mysql:
    image: mysql:5.7 # 5.6 and below is not supported
    environment:
      MYSQL_ROOT_PASSWORD: 12345
      MYSQL_DATABASE: conductor
      MYSQL_USER: conductor
      MYSQL_PASSWORD: conductor
    volumes:
      - type: volume
        source: conductor_mysql
        target: /var/lib/mysql
    networks:
      - internal
    ports:
      - 3306:3306
    healthcheck:
      test: timeout 5 bash -c 'cat < /dev/null > /dev/tcp/localhost/3306'
      interval: 5s
      timeout: 5s
      retries: 12

  # https://www.elastic.co/guide/en/elasticsearch/reference/5.6/docker.html
  # if Elasticsearch Container Stopped with Exit 78
  # run `sudo sysctl -w vm.max_map_count = 262144` in terminal 
  # https://github.com/laradock/laradock/issues/1699
  elasticsearch:
    image: elasticsearch:6.8.15
    environment:
      - cluster.name=docker-cluster
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    networks:
      - internal
    ports:
      - 9200:9200
      - 9300:9300
    healthcheck:
      test: timeout 5 bash -c 'cat < /dev/null > /dev/tcp/localhost/9300'
      interval: 5s
      timeout: 5s
      retries: 12

  elasticsearch2:
    image: elasticsearch:6.8.15
    environment:
      - cluster.name=docker-cluster
      - bootstrap.memory_lock=true
      - "ES_JAVA_OPTS=-Xms512m -Xmx512m"
      - "discovery.zen.ping.unicast.hosts=elasticsearch"
    ulimits:
      memlock:
        soft: -1
        hard: -1
    networks:
      - internal 

volumes:
  conductor_mysql:

networks:
  internal:
